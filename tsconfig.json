{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2015",
      "scripthost"
    ],
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noImplicitUseStrict": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "outDir": "tmp/tsc-output",
    "sourceMap": true
  },
  "include": [
    "src/main.ts"
  ]
}
